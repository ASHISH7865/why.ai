{
    "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./",
        "moduleResolution": "node",
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "dist"
    ]
}
